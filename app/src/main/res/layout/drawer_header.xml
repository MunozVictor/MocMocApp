<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/drawer_background2"
    android:orientation="vertical"
    android:paddingTop="@dimen/appbar_padding_top"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/leftMargin_linear"
        android:elevation="4dp"
        android:src="@mipmap/ic_foto_perfil_prueba"/>

    <TextView
        android:text="Usurio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usuario"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/avatar" />

    <TextView
        android:text="usuario@ejemplo.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_alignStart="@+id/usuario"
        android:id="@+id/email"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white" />

</RelativeLayout>