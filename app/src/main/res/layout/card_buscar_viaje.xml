<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="10dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:background="@android:color/white"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_userName"
                    android:text="Nombre de usuario"
                    android:layout_marginStart="5dp"
                    android:textSize="34sp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="normal|bold" />


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/unoDeCinco"
                    android:layout_weight="2.32">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Alcobendas"
                        android:id="@+id/txt_origen_usr"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_viaje"
                    android:id="@+id/iv_viaje"
                    android:layout_weight="1"
                    android:layout_height="65dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/dosDeCinco"

                    android:layout_weight="2.32">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Villaviciosa"
                        android:layout_marginTop="30dp"
                        android:id="@+id/txt_destino_viaje"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tresDeCinco">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hora"
                        android:id="@+id/txt_hora"
                        android:textSize="18sp"
                        android:layout_marginRight="15dp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plazas"
                        android:id="@+id/txt_plazas"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="textEnd" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cuatroDeCinco"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:id="@+id/txt_hora_viaje"
                        android:textSize="30sp"
                        android:textAlignment="textStart"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:id="@+id/txt_plazas_viaje"
                        android:textSize="30sp"
                        android:layout_marginLeft="2dp"
                        android:layout_below="@+id/txt_plazas"
                        android:layout_marginRight="10dp"
                        android:textAlignment="textStart"
                        android:textStyle="normal|bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>